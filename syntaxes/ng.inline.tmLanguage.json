{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Angular @Component Inline Template & Styles",
	"fileTypes": ["ts"],
	"injectionSelector": "L:source -string -comment",
	"patterns": [
		{
			"include": "#component"
		}
	],
	"repository": {
		"component": {
			"name": "meta.component.decoration",
			"begin": "@\\s*Component\\s*\\(\\s*\\{",
			"end": "\\}\\s*\\)",
			"patterns": [
				{
					"include": "#template"
				},
				{
					"include": "#styles"
				},
				{
					"include": "source.ts"
				}
			]
		},
		"template": {
			"name": "meta.template.property",
			"begin": "(?<=template)\\s*:\\s*`",
			"end": "`\\s*",
			"patterns": [
				{
					"name": "meta.inline.template",
					"include": "text.xml"
				},
				{
					"name": "meta.template.expression",
					"begin": "\\{\\{",
					"end": "\\}\\}",
					"patterns": [
						{
							"match": "\\?\\.",
							"name": "keyword.operator.ng"
						},
						{
							"include": "source.js"
						}
					]
				}
			]
		},
		"styles": {
			"name": "meta.styles.property",
			"begin": "(?<=styles)\\s*:\\s*\\[",
			"end": "\\]",
			"patterns": [
				{
					"name": "meta.inline.style",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"include": "source.css"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.ts.ng.inline"
}